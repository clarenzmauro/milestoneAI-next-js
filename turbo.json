{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"env": [
				"CONVEX_DEPLOYMENT",
				"CONVEX_URL",
				"CLERK_SECRET_KEY",
				"GEMINI_API_KEY",
				"NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
				"NEXT_PUBLIC_CONVEX_URL"
			],
			"outputs": [".next/**", "dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}
